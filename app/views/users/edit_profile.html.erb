<%= form_for @current_user, url: {action: "update_profile" } do |u| %>

<div class="form">
	<%= u.label :image, class: "small-12 columns" %>
	<%= u.file_field :image %>
</div>

<%= u.fields_for :profile do |f| %>
	<div class="form">
		<%= f.label :bio, class: "small-12 columns" %>
		<%= f.text_field :bio %>
	</div>
<% end %>

<div class="actions">
	<%= u.submit "Save", class: "custom-button" %>
</div>

<% end %>
