<h2>Hey, <%= @current_user.username %>!  You're currently matched with 
	<%= @current_match.username %>
</h2>

<%= image_tag(@current_match.image.url(:medium)) %><br /><br />

<% @messages.each do |message| %>
	<%= message.body %><br />
<% end %>
<br />


<%= form_for :reply, :url => reply_path, :method => :post do |r| %>
	<%= r.label "Reply" %>
	<%= r.text_field :body %>
	<%= r.submit "Send" %>
<% end %>